<body>

<h2>Bio Data Collection</h2>

<form id="bioForm">
    <label for="fullName">Full Name:</label>
    <input type="text" id="fullName" name="fullName" required>

    <label for="age">Age:</label>
    <input type="text" id="age" name="age" required>

    <label for="gender">Gender:</label>
    <input type="text" id="gender" name="gender" required>

    <label for="photo">Photo:</label>
    <input type="file" accept="image/*" capture="camera" id="photoInput" name="photo" required>
    <img id="photo" src="#" alt="Your Photo" style="display:none;">

    <button type="submit">Submit</button>
</form>

<script>
    const form = document.getElementById('bioForm');
    const photoInput = document.getElementById('photoInput');
    const photo = document.getElementById('photo');

    form.addEventListener('submit', function(event) {
        event.preventDefault();
        
        const formData = new FormData(form);
        const fullName = formData.get('fullName');
        const age = formData.get('age');
        const gender = formData.get('gender');
        const photoFile = formData.get('photo');

        // For demonstration, log the collected data
        console.log('Full Name:', fullName);
        console.log('Age:', age);
        console.log('Gender:', gender);
        console.log('Photo:', photoFile);

        // You can now send this data to your server using AJAX or any other method
        
        alert('Data collected successfully!');
        // Reset the form
        form.reset();
        // Reset the photo preview
        photo.src = '#';
        photo.style.display = 'none';
    });

    photoInput.addEventListener('change', function() {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                photo.src = e.target.result;
                photo.style.display = 'block';
            }
            reader.readAsDataURL(file);
        }
    });
</script>

</body>
</html>
